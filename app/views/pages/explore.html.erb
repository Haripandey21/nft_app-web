<h1 class="text-center mt-2">Listed NFTs</h1>
<div class="container mt-5">
  <table class="table table-bordered border-primary">
    <thead>
      <tr class="text-center">
        <th scope="col">TokenID</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Buy_Sell</th>
      </tr>
    </thead>
    <tbody>
      <% @tables.each do |table|%>
        <tr class="align-middle text-center">
          <td><%= table.table_id %></td>
          <td><%= table.name %></td>
          <td class="w-25"><%= table.description %></td>
          <td class="w-25 text-center"><img src="<%= table.image_URI %>" class="img-thumbnail w-50" alt=""></td>
         <td>                      
            <%= link_to 'Sell',new_nft_sale_path(table),class:'btn btn-danger'%> 
            </td>     
        </tr>        
      <% end%>
    </tbody>
  </table>
</div>





